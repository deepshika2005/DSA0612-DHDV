library(GGally)
library(scatterplot3d)

# Create the data frame
data <- data.frame(
  Date = as.Date(c('2023-01-01', '2023-01-02', '2023-01-03', '2023-01-04', '2023-01-05')),
  Temperature = c(10, 12, 8, 15, 14),
  Humidity = c(75, 70, 80, 65, 72),
  WindSpeed = c(15, 12, 18, 20, 16)
)

# Create pair plot
pair_plot <- ggpairs(data[, c("Temperature", "Humidity", "WindSpeed")],
                     upper = list(continuous = "cor"),
                     lower = list(continuous = "smooth"),
                     title = "Pair Plot of Temperature, Humidity, and Wind Speed")

# Print pair plot
print(pair_plot)

# Create a 3D scatter plot
scatterplot3d(
  x = data$WindSpeed,
  y = data$Humidity,
  z = data$Temperature,
  xlab = "Wind Speed (km/h)",
  ylab = "Humidity (%)",
  zlab = "Temperature (Â°C)",
  pch = 19,
  color = "blue",
  main = "3D Scatter Plot: Wind Speed, Humidity, and Temperature"
)
